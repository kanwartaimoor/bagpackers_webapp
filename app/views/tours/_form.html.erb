<section class="booking">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="booking-form booking-outer">

          <%= form_with(model: tour, local: true, class: "custom-form" ) do |form|  %>

            <% if @tour.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@tour.errors.count, "error") %> prohibited this tour from being saved:</h2>
                <ul>
                  <% @tour.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row">
              <div class="form-group col-xs-6">
                <%= form.label :title, style: 'text-transform: capitalize',class:"label-login" %>
                <%= form.text_field :title,placeholder:"Title", style: 'text-transform: capitalize', class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :price, style: 'text-transform: capitalize; ',class:"label-login"  %>
                <%= form.number_field :price,placeholder:"Price", style: 'text-transform: capitalize; ', class:"form-control", min:'0', type:"number", onkeypress:"return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57" %>
              </div>
              <div class="form-group col-xs-6 ">
                <%= form.label :duration, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.number_field :duration,placeholder:"duration", style: 'text-transform: capitalize; ', class:"form-control", min:'0', type:"number", onkeypress:"return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :seats, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.number_field :seats,placeholder:"Seats", style: 'text-transform: capitalize;', class:"form-control", min:'0', type:"number", onkeypress:"return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57" %>
              </div>
              <div class="form-group col-xs-5">
                <label>Date:</label>
                <%= form.date_field :date,placeholder:"Date", class:"form-control" %>

              </div>
              <div class="form-group col-xs-4">
                <label>Type</label>
                <%=  form.collection_select(:tourims_type_id, TourismType.all, :id, :name, prompt: true, class:"form-control label-input required" )%>
              </div>
              <div class="form-group col-xs-3">
                <label>Source Location</label>
                <%=  form.collection_select(:source_location, Location.all, :id, :name, prompt: true, class:"form-control label-input required", required:"true" )%>
              </div>
              <div class="form-group col-xs-3">
                <label>Destination Location</label>
                <%=  form.collection_select(:locations_id, Location.all, :id, :name, prompt: true, class:"form-control label-input required", required:"true" )%>
              </div>
              <div class="textarea col-xs-12">
                <%= form.label :description,style: 'text-transform: capitalize;' , class:"label-login"  %>
                <%= form.cktext_area :description, class:"form-control" %>
              </div>
              <div class="textarea col-xs-12">
                <%= form.label :services_included, style: 'text-transform: capitalize;',class:"label-login"  %>
                <%= form.cktext_area :services_included, class:"form-control label-input" %>
              </div>
              <div class="textarea col-xs-12">
                <%= form.label :services_not_included, style: 'text-transform: capitalize;',class:"label-login"  %>
                <%= form.cktext_area :services_not_included, class:"form-control label-input" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :image,  style: 'text-transform: capitalize;',class:"label-login"  %>
                <%= form.file_field :image, class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :trip_images,style: 'text-transform: capitalize;', class:"label-login"  %>
                <%= form.file_field :trip_images, class:"form-control", multiple:"true" %>
              </div>

              <div class="col-xs-12">
                <button type="submit" data-hover="Add Tour" class="btn btn-red">
                  <span class="text">Add Tour </span>
                </button>
              </div>
            </div>
          <% end %>
        </div>

<div class="comment-item" id="tour-review-<%= review.id %>"><div class="row"><div class="col-md-4 col-sm-4"><div class="comment-image"><% if review.user.profile_picture.attached? %><img src="<%= url_for review.user.profile_picture %>" alt="Images"><% else %><img src="<%= image_path "user_default" %>" alt="Images"><% end %><h4><a href="<%= user_path review.user %>"><%= review.user.name %></a></h4><span class="comment-date"> <%= time_ago_in_words review.created_at %> </span></div></div><div class="col-md-8 col-sm-8 ml-3"><div class="comment-desc"><div class="deal-rating"><% review.rating.times do %><span class="fa fa-star checked"></span><% end %><% (5 - review.rating).times do %><span class="fa fa-star-o"></span><% end %></div><p><%= review.review_text %></p></div></div></div></div>
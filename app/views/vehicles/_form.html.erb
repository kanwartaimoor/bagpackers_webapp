<section class="booking">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="booking-form booking-outer">
          <%= form_for([ @car_rental, vehicle ], local: true) do |form| %>
            <% if vehicle.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this hotel from being saved:</h2>
                <ul>
                  <% vehicle.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row">
              <div class="form-group col-xs-6">
                <%= form.label :make_year, style: 'text-transform: capitalize',class:"label-login" %>
                <%= form.text_field :make_year,placeholder:"Hotel Name", style: 'text-transform: capitalize', class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :company_model, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.text_field :company_model, placeholder:"Hotel Contact Number", style: 'text-transform: capitalize; ', class:"form-control" %>
              </div>
              <div class="form-group col-xs-6 ">
                <%= form.label :rent_with_driver, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.number_field :rent_with_driver,placeholder:"Hotel Email", class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :rent_self, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.number_field :rent_self,placeholder:"Hotel Address", style: 'text-transform: capitalize;', class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <%= form.label :capacity, style: 'text-transform: capitalize; ',class:"label-login" %>
                <%= form.number_field :capacity,placeholder:"Website URL (Optional)", class:"form-control" %>
              </div>
              <div class="form-group col-xs-6">
                <label>Vehicle Type</label>
                <%=  form.collection_select(:vehicle_type, VehicleType.all, :vehicle_type, :vehicle_type, prompt: true, class:"form-control required", required:"true" )%>
              </div>

              <div class="form-group col-xs-6">
                <%= form.label :vehicle_pictures,style: 'text-transform: capitalize;', class:"label-login"  %>
                <%= form.file_field :vehicle_pictures, class:"form-control", multiple:"true" %>
              </div>



              <div class="col-xs-12">
                <div class="comment-btn">
                  <a href="javascript:$('form').submit()" class="btn-blue btn-red">Add Vehicle</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>

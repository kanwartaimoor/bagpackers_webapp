<%= form_for([tour_detail.tour,tour_detail], local: true, remote: true) do |form| %>
  <div class="timeline col-md-12" id="tour-details-<%= tour_detail.id %>">
    <div class="timeline-block">
      <% if tour_detail.errors.any? %>
        <ul>
          <% tour_detail.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="timeline-title">
        <span>Day
          <%= tour_detail.day + 1 %>
        </span>
      </div>
      <div class="timeline-content medium-margin-top">
        <div class="row">
          <div class="timeline-point">
            <i class="fa fa-circle-o"></i>
          </div>
          <div class="">
            <div class="timeline-location-block">
              <p class="location-name">
                <%= form.label :location %>
                <%= form.text_area :location %>
                <i class="fa fa-map-marker icon-marker"></i>
              </p>
              <p class="description">
                <%= form.label :description %>
                <%= form.text_area :description %>
            </div>
          </div>
        </div>
      </div>
      <%= form.submit %>
    </div>
  </div>
<% end %>



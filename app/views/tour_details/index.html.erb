<p id="notice"><%= notice %></p>

<h1>Tour Details</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tour_details.each do |tour_detail| %>
      <tr>
        <td><%= link_to 'Show', tour_detail %></td>
        <td><%= link_to 'Edit', edit_tour_detail_path(tour_detail) %></td>
        <td><%= link_to 'Destroy', tour_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


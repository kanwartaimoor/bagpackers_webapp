<!-- header area start -->
<header>
  <div class="header-top sticky bg-white d-none d-lg-block">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-5">
          <!-- header top navigation start -->
          <div class="header-top-navigation">
            <nav>
              <ul>
                <li class="active"><a href="<%= user_path(current_user) %>">home</a></li>
                </li>
              </ul>
            </nav>
          </div>
          <!-- header top navigation start -->
        </div>

        <div class="col-md-2">
          <!-- brand logo start -->
          <div class="brand-logo text-center">
            <a href="<%= root_path %>">
              <img src="<%= asset_path 'logo_bagpackers' %>" alt="brand logo" style="max-height: 50px">
            </a>
          </div>
          <!-- brand logo end -->
        </div>

        <div class="col-md-5">
          <div class="header-top-right d-flex align-items-center justify-content-end">
            <!-- header top search start -->
            <div class="header-top-search">
            </div>
            <!-- header top search end -->

            <!-- profile picture start -->
            <div class="profile-setting-box">
              <div class="profile-thumb-small">
                <a href="javascript:void(0)" class="profile-triger">
                  <figure>
                    <% if current_user.profile_picture.attached? %>
                      <img src="<%= rails_blob_url(current_user.profile_picture) %>" alt="profile picture">
                    <% else %>
                      <%= image_tag "user_default.png" %>
                    <% end %>
                  </figure>
                </a>
                <div class="profile-dropdown">
                  <div class="profile-head">
                    <h5 class="name"><a href="#"><%= current_user.name %></a></h5>
                    <a class="mail" href="#"><%= current_user.email %></a>
                  </div>
                  <div class="profile-body">
                    <ul>
                      <li><a href="<%= user_path(current_user) %>"><i class="flaticon-user"></i>Profile</a></li>
                      <li><a href="<%= messages_index_path %>"><i class="flaticon-message"></i>Inbox</a></li>
                    </ul>
                    <ul>
                      <li><%= link_to 'Log out', destroy_user_session_path, method: :delete%></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <!-- profile picture end -->
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header area end -->

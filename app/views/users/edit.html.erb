<main>
  <div class="main-wrapper">
    <%= render 'profile_view' %>
    <div id="user-<%= @user.id %>" class="row">
      <div class="col-lg-12">
        <div class="well">
          <div class="order-1 order-lg-2 d-flex align-items-center justify-content-center">
            <div class="signup-form-wrapper">
              <div class="signup-inner">
                <h3 class="title text-center">Edit Profile</h3>
                <%= form_for @user , class:'signup-inner--form' do |f| %>
                  <div class="row" style="padding: 10px;">
                    <div class="col-md-6">
                      <%= f.label :cover %>
                      <br>
                      <%= f.file_field :cover , class: 'single-field' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :profile_picture %>
                      <br>
                      <%= f.file_field :profile_picture, class: 'single-field' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :name %>
                      <br>
                      <%= f.text_field :name, class: 'single-field' ,placeholder: 'Full Name' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :location %>
                      <br>
                      <%= f.text_field :location, class: 'single-field' , placeholder: 'Location' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :phone_number %>
                      <br>
                      <%= f.text_field :phone_number, class: 'single-field' , placeholder: 'Phone Number' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :dob %>
                      <br>
                      <%= f.text_field :dob, class: 'single-field' , placeholder: 'Date of Birth' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :sex %>
                      <br>
                      <%= f.select :sex, options_for_seasons, class: 'single-field' , prompt: 'Select One' %>
                    </div>
                    <div class="col-md-6">
                      <%= f.label :about %>
                      <br>
                      <%= f.text_area :about , placeholder: 'About' %>
                    </div>
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                      <%= submit_tag 'Update Profile', class: 'submit-btn' %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--    <div class="col-lg-3">-->
      <%#= render 'shared/links' %>
      <!--    </div>-->
    </div>
  </div>
</main>







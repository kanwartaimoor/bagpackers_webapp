<div class="row">
  <div class="col-lg-12 col-md-12 col-xs-12 traffic">
    <div class="dashboard-list-box">
      <h4 class="gray">Your Tours</h4>
      <div class="table-box">
        <table class="basic-table">
          <thead>
          <tr>
            <th>User Name</th>
            <th>Tour Name</th>
            <th>No of Seats</th>
            <th>Payment Status</th>
            <th>Payment Amount</th>
            <th>Date</th>
          </tr>
          </thead>

          <tbody>
          <% @bookings.each do |booking| %>
            <tr >
              <td> <a href="<%= user_path(booking.user) %>"> <%= booking.user.name %></a>  </td>
              <td ><%= booking.tour.title %></td>
              <td class="t-id"><%= booking.no_of_seats %></td>
              <td ><%= booking.payment_status %></td>
              <td ><%= booking.payment_amount %></td>
              <td><%= booking.created_at %></td>
            </tr>
          <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>
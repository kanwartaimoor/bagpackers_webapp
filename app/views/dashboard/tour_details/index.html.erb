    </div>
    <div class="dashboard-nav">
      <div class="dashboard-nav-inner nav-tabs">
        <ul>
          <li class="active"><a data-toggle="tab" href="#home"><i class="sl sl-icon-settings"></i> Add Tour Details</a></li>
          <li><a href="<%= dashboard_trip_organizers_path %>"><i class="sl sl-icon-settings"></i> Back To Dashbaord</a></li>
          <li><a href="<%= tour_path @tour %>" ><i class="sl sl-icon-user"></i> View Trip</a></li>
        </ul>
      </div>
    </div>
    <div class="tab-content">
      <div class="dashboard-content tab-pane fade in active" id="home" >
        <div class="row">

          <!-- Item -->
          <div class="col-lg-3 col-md-6 col-xs-6">
            <div class="dashboard-stat color-1">
              <div class="dashboard-stat-content"><h4><%= @trip_organizer.tours.count  %></h4> <span>Total Tours</span></div>
              <div class="dashboard-stat-icon"><i class="im im-icon-Map2"></i></div>
            </div>
          </div>

          <!-- Item -->
          <div class="col-lg-3 col-md-6 col-xs-6">
            <div class="dashboard-stat color-2">
              <div class="dashboard-stat-content"><h4><%= @trip_organizer.bookings.count  %></h4> <span>Total Bookings</span></div>
              <div class="dashboard-stat-icon"><i class="im im-icon-Line-Chart"></i></div>
            </div>
          </div>


          <!-- Item -->
          <div class="col-lg-3 col-md-6 col-xs-6">
            <div class="dashboard-stat color-3">
              <div class="dashboard-stat-content"><h4><%= @trip_organizer.tour_reviews.count  %></h4> <span>Total Reviews</span></div>
              <div class="dashboard-stat-icon"><i class="im im-icon-Add-UserStar"></i></div>
            </div>
          </div>

          <div class="col-lg-3 col-md-6 col-xs-6">
            <div class="dashboard-stat color-4">
              <div class="dashboard-stat-content"><h4><%=  number_with_precision(@trip_organizer.tour_reviews.average(:rating), precision: 2) %></h4> <span>Rating</span></div>
              <div class="dashboard-stat-icon"><i class="im im-icon-Heart"></i></div>

            </div>
          </div>
        </div>


        <div class="row">
          <!-- Recent Activity -->
          <div class="col-lg-12 col-md-12 col-xs-12 traffic">
            <div class="dashboard-list-box with-icons margin-top-20">
              <h4 class="gray">Add Tour Details</h4>
              <ul>
                <%= render @tour_details %>
              </ul>
            </div>
          </div>
        </div>


      </div>
    </div>


    <!-- Content / End -->

  </div>

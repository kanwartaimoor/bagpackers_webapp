<% if @hotel_room.errors.any? %>

<% @hotel_room.errors.full_messages.each do |message| %>
$("#error_explanation2-").append("<p> <%= message %> </p>");
<% end %>
$("#error_explanation2-").animate({
    scrollTop: $("#error_explanation2-").offset().top
}, 2000);

$('html, body').animate({
    scrollTop: $("#error_explanation2-").offset().top
}, 1000);

<% end %>
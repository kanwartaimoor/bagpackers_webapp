<h1>Featured Tours</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @featured_tours.each do |featured_tour| %>
      <tr>
        <td><%= link_to 'Show', featured_tour %></td>
        <td><%= link_to 'Edit', edit_featured_tour_path(featured_tour) %></td>
        <td><%= link_to 'Destroy', featured_tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


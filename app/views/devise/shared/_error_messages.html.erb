<% if resource.errors.any? %>
  <div id="error_explanation" >
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <div class='alert alert-danger'>

          <li>
            <%= message %>
            <a href="#" class="close mt-5" data-dismiss="alert">&#215;</a>
          </li>
        </div>

      <% end %>
    </ul>
  </div>
<% end %>
